{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "yarn build",
  "installCommand": "yarn install",
  "framework": null,
  "functions": {
    "apps/blog/app/api/**": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/blog/:path*",
      "destination": "https://duyet.vercel.app/:path*"
    },
    {
      "source": "/cv/:path*", 
      "destination": "https://duyet-cv.vercel.app/:path*"
    },
    {
      "source": "/insights/:path*",
      "destination": "https://duyet-insights.vercel.app/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/daily",
      "schedule": "0 9 * * *"
    }
  ]
}