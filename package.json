{
  "name": "duyet",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/duyet/monorepo.git"
  },
  "scripts": {
    "build": "dotenv -- turbo build",
    "dev": "dotenv -- turbo dev --parallel",
    "prepare": "[ \"$CI\" != \"true\" ] && husky || true",
    "fmt": "biome format --write .",
    "lint": "biome lint .",
    "start": "dotenv -- turbo start",
    "test": "dotenv -- turbo test",
    "config": "turbo run config",
    "deploy": "turbo deploy && bun run config",
    "cf:deploy": "bun scripts/cf-deploy.ts",
    "cf:deploy:prod": "turbo run cf:deploy:prod"
  },
  "lint-staged": {
    "*": "biome format --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@duyet/tsconfig": "*",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.0.0",
    "turbo": "^2.5.3",
    "typescript": "^5.8.3"
  },
  "packageManager": "bun@1.3.4"
}
