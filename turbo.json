{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_DUYET_HOME_URL",
    "NEXT_PUBLIC_DUYET_CV_URL",
    "NEXT_PUBLIC_DUYET_BLOG_URL",
    "NEXT_PUBLIC_DUYET_INSIGHTS_URL",
    "NEXT_PUBLIC_DUYET_PHOTOS_URL",
    "NEXT_PUBLIC_DUYET_HOMELAB_URL",
    "UNSPLASH_ACCESS_KEY",
    "UNSPLASH_USERNAME",
    "PHOTOS_OWNER_USERNAME",
    "CLOUDINARY_CLOUD_NAME",
    "CLOUDINARY_API_KEY",
    "CLOUDINARY_API_SECRET",
    "CLOUDINARY_FOLDER",
    "KV_REST_API_READ_ONLY_TOKEN",
    "KV_REST_API_TOKEN",
    "KV_REST_API_URL",
    "KV_URL",
    "CLOUDFLARE_API_KEY",
    "CLOUDFLARE_API_TOKEN",
    "CLOUDFLARE_ZONE_ID",
    "NEXT_PUBLIC_MEASUREMENT_ID",
    "NEXT_PUBLIC_AXIOM_DATASET",
    "NEXT_PUBLIC_SELINE_TOKEN",
    "POSTHOG_API_KEY",
    "POSTHOG_PROJECT_ID",
    "GITHUB_TOKEN",
    "WAKATIME_API_KEY",
    "CLICKHOUSE_HOST",
    "CLICKHOUSE_PORT",
    "CLICKHOUSE_USER",
    "CLICKHOUSE_PASSWORD",
    "CLICKHOUSE_DATABASE",
    "CLICKHOUSE_PROTOCOL",
    "OPENROUTER_API_KEY",
    "NEXT_PUBLIC_API_BASE_URL"
  ],
  "globalDependencies": [
    ".env",
    ".env.local",
    ".env.development",
    ".env.production"
  ],
  "tasks": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "dependsOn": ["^build"]
    },
    "lint": {},
    "fmt": {},
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "config": {
      "cache": false
    },
    "deploy": {
      "dependsOn": ["test", "lint"]
    },
    "clean": {
      "cache": false
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "cf:deploy": {
      "cache": false,
      "dependsOn": ["build"]
    }
  }
}
