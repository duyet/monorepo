{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "browser": {
    "fs": false,
    "os": false,
    "path": false
  },
  "scripts": {
    "config": "bun ../../scripts/sync-app-secrets.ts duyet-blog",
    "analyze": "ANALYZE=true bun --bun next build",
    "build": "bun --bun next build",
    "check-types": "tsc --noEmit",
    "dev": "bun --bun next dev --turbopack -p 3000",
    "fmt": "bun run fix",
    "lint": "biome lint .",
    "start": "bun --bun next start",
    "deploy": "bun run build && bunx wrangler pages deploy out --project-name=duyet-blog",
    "cf:deploy": "bun run --env-file=../../.env.production --env-file=../../.env.production.local build && bunx wrangler pages deploy out --project-name=duyet-blog --commit-dirty=true",
    "cf:deploy:prod": "bun run --env-file=../../.env.production --env-file=../../.env.production.local build && bunx wrangler pages deploy out --project-name=duyet-blog --commit-dirty=true",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "dependencies": {
    "@duyet/components": "*",
    "@duyet/config": "*",
    "@duyet/libs": "*",
    "@mdx-js/mdx": "^3.1.1",
    "@types/mdx": "^2.0.13",
    "katex": "^0.16.11",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "next-mdx-remote-client": "^1.0.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "rehype-highlight": "^7.0.0",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "rss": "^1.2.2"
  },
  "devDependencies": {
    "@duyet/interfaces": "*",
    "@duyet/tailwind-config": "*",
    "@duyet/tsconfig": "*",
    "@types/react": "^19.1.4",
    "@types/rss": "^0.0.32",
    "typescript": "*"
  }
}
