{
  "name": "duyet",
  "private": true,
  "workspaces": ["packages/*", "apps/*"],
  "repository": {
    "type": "git",
    "url": "https://github.com/duyet/monorepo.git"
  },
  "scripts": {
    "build": "dotenv -- turbo build",
    "dev": "dotenv -- turbo dev --parallel",
    "prepare": "[ \"$CI\" != \"true\" ] && husky || true",
    "fmt": "biome format --write .",
    "lint": "biome lint .",
    "start": "dotenv -- turbo start",
    "test": "dotenv -- turbo test",
    "config": "turbo run config",
    "deploy": "turbo deploy && bun run config",
    "cf:deploy": "bun scripts/cf-deploy.ts",
    "cf:deploy:app": "bun scripts/cf-deploy.ts"
  },
  "lint-staged": {
    "*": "biome format --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@duyet/tsconfig": "*",
    "@next/env": "^16.1.1",
    "@tailwindcss/postcss": "^4.1.6",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.0.0",
    "postcss": "^8.5.3",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "rehype-slug": "^6.0.0",
    "remark-directive": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "remark-rehype": "^11.1.2",
    "tailwindcss": "^4.1.6",
    "turbo": "^2.5.3",
    "tw-animate-css": "^1.2.9",
    "typescript": "^5.8.3"
  },
  "packageManager": "bun@1.3.4",
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^16.1.1",
    "framer-motion": "^12.26.1",
    "lucide-react": "^0.562.0",
    "recharts": "^3.6.0"
  }
}
