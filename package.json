{
  "name": "duyet",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/duyet/monorepo.git"
  },
  "scripts": {
    "build": "dotenv -- turbo build",
    "dev": "dotenv -- turbo dev --parallel",
    "prepare": "[ \"$CI\" != \"true\" ] && husky || true",
    "fmt": "biome format --write .",
    "lint": "biome lint .",
    "start": "dotenv -- turbo start",
    "test": "dotenv -- turbo test",
    "config": "turbo run config",
    "deploy": "turbo deploy && bun run config",
    "cf:deploy": "bun scripts/cf-deploy.ts",
    "cf:deploy:prod": "turbo run cf:deploy:prod"
  },
  "lint-staged": {
    "*": "biome format --write"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@tailwindcss/postcss": "^4.1.6",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.20",
    "graphql-request": "^7.1.2",
    "highlight.js": "^11.11.1",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.3",
    "swr": "^2.3.0",
    "tailwindcss": "^4.1.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@duyet/tsconfig": "*",
    "@headlessui/tailwindcss": "^0.2.2",
    "@next/env": "^16.1.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.0",
    "deepmerge": "^4.3.1",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.0.0",
    "tailwind-highlightjs": "^2.0.1",
    "tailwindcss-animate": "^1.0.7",
    "turbo": "^2.5.3",
    "tw-animate-css": "^1.3.0",
    "typescript": "^5.8.3"
  },
  "packageManager": "bun@1.3.4"
}
